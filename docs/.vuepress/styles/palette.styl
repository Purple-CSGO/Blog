 //// 修改主题颜色-透明度-字体颜色
 // 浅色模式
 .theme-mode-light
   --badyBg: #f4f4f4
   --mainBg: rgba(255,255,255,.85)
   --sidebarBg: rgba(255,255,255,.3)
   --blurBg: rgba(255,255,255,.9)
   --textColor: #2c3e50
   --textLightenColor: #0085AD
   --borderColor: rgba(0,0,0,.15)
   --codeBg: rgba(246,246,246,.6)
   --codeColor: #525252
   codeThemeLight()

 // 深色模式
 .theme-mode-dark
   --badyBg: rgb(39,39,43)
   --mainBg: rgba(30,30,34,.85)
   --sidebarBg: rgba(30,30,34,.3)
   --blurBg: rgba(30,30,34,.8)
   --textColor: #d1d3d5
   --textLightenColor: #0085AD
   --borderColor: #2C2C3A
   --codeBg: rgba(37,37,38,.8)
   --codeColor: #fff
   codeThemeDark()

 // 阅读模式
 .theme-mode-read
   --badyBg: rgb(240,240,208)
   --mainBg: rgba(245,245,213,.85)
   --sidebarBg: rgba(245,245,213,.8)
   --blurBg: rgba(245,245,213,.95)
   --textColor: #2c3e50
   --textLightenColor: #0085AD
   --borderColor: rgba(0,0,0,.15)
   --codeBg: rgba(40,44,52,1)
   --codeColor: #fff
   codeThemeDark()
